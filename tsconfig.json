{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["es2021"],
    "allowJs": false,
    "jsx": "react-native",
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },

    /* Strict Type-Checking Options */
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* Additional Checks */
    "forceConsistentCasingInFileNames": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
